const Category = () => {
const { category, setCategory } = useContext(contextStore);
return (
<div className="flex-col justify-center items-center m-[3%] p-4 gap-5 ">
<h1 className="font-bold text-xl text-center ">
Find doctors with different expertise â€“
</h1>
